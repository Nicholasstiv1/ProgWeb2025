<div class="container py-4" style="max-width: 700px;">
  <h1 class="mb-4 fw-light text-center">Lista de Usuários</h1>

  <div class="mb-3 text-center">
    <a href="/users/create" class="btn btn-outline-primary btn-sm">+ Novo Usuário</a>
  </div>

  {{#if users.length}}
    <div class="list-group">
      {{#each users}}
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong>{{this.fullName}}</strong><br />
            <small class="text-muted">{{this.email}}</small>
          </div>
          <div class="d-flex gap-2">
            <a href="/users/{{this.id}}" class="text-decoration-none text-secondary">Detalhes</a>
            <a href="/users/edit/{{this.id}}" class="text-decoration-none text-warning">Editar</a>
            <button
              type="button"
              class="btn btn-link btn-sm text-danger p-0 m-0"
              data-bs-toggle="modal"
              data-bs-target="#confirmUserDeleteModal"
              data-id="{{this.id}}"
              data-name="{{this.fullName}}"
            >
              Excluir
            </button>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="text-muted text-center">
      <p>Nenhum usuário cadastrado ainda.</p>
      <p>Use o botão acima para adicionar o primeiro.</p>
    </div>
  {{/if}}
</div>

<div class="modal fade" id="confirmUserDeleteModal" tabindex="-1" aria-labelledby="confirmUserDeleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="userDeleteForm" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmUserDeleteModalLabel">Confirmar Exclusão</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </div>
        <div class="modal-body">
          <p>Deseja realmente excluir o usuário <strong id="userNameInModal">...</strong>?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-danger btn-sm">Confirmar</button>
        </div>
      </form>
    </div>
  </div>
</div>
